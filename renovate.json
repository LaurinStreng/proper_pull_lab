{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/talconfig.yaml$/"
      ],
      "matchStrings": [
        "talosVersion\\:(!?\\s)(?<currentValue>.*)\\n"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "siderolabs/talos"
    }
  ],
  "packageRules": [
    {
      "ignoreTests": true, // TODO add some kubeconform test
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
